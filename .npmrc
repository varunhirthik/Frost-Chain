# Security-focused NPM configuration for FROST-CHAIN project
# Enforces exact version matching to prevent unexpected upgrades
save-exact=true

# Prevents automatic execution of pre/post-install scripts from third-party packages
# This is a critical security measure against malicious code injection
ignore-scripts=true

# Audit level set to moderate to catch known vulnerabilities
audit-level=moderate

# Use npm ci for deterministic builds in CI/CD environments
fund=false

# Registry configuration
registry=https://registry.npmjs.org/
